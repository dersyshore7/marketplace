{
  "manifest_version": 3,
  "name": "Facebook Marketplace Deal Analyzer",
  "version": "1.0.0",
  "description": "Analyze Facebook Marketplace listings to determine if they're good deals",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://www.facebook.com/*",
    "*://facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/marketplace/*",
        "*://facebook.com/marketplace/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Deal Analyzer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
